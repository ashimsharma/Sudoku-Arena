{
  "compilerOptions": {
    "target": "ES6",                    // Sets ECMAScript version
    "module": "CommonJS",                // Use CommonJS for Node.js compatibility
    "rootDir": "src",                    // Source files directory
    "outDir": "dist",                    // Compiled files directory
    "strict": true,                       // Enable strict type-checking
    "esModuleInterop": true,              // Allow default imports from CommonJS
    "resolveJsonModule": true,            // Allows importing JSON files
    "moduleResolution": "node",           // Resolves modules like Node.js
    "forceConsistentCasingInFileNames": true, // Prevents case mismatches
    "skipLibCheck": true,                 // Skip type checking of declaration files
    "noImplicitAny": true,                // Disallow `any` type
    "allowJs": true,                      // Allow JavaScript files
    "strictPropertyInitialization": false, // Avoid errors when initializing class properties
    "sourceMap": true                      // Generates source maps for debugging
  },
  "include": ["src"],  // Specifies files to compile
  "exclude": ["node_modules", "dist"] // Ignore these folders
}
